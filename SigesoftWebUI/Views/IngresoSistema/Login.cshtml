@using SigesoftWebUI.Models
@model LoginViewModel

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <title>Sigesoft</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/assets/plugins/Login/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link href="~/assets/plugins/Login/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/assets/plugins/Login/fonts/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/assets/plugins/Login/vendor/animate/animate.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/assets/plugins/Login/vendor/css-hamburgers/hamburgers.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/assets/plugins/Login/vendor/select2/select2.css" rel="stylesheet" />
    <!--===============================================================================================-->

    <link href="~/assets/plugins/Login/css/util.css" rel="stylesheet" />
    <link href="~/assets/plugins/Login/css/main.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <style>
        .container-login100 {
            background: linear-gradient(-135deg, #a9c1dc, #2e548f);
        }

        .login100-form-btn {
            background: #2e548f;
        }

        .focus-input100 {
            color: rgb(46, 84, 143);
        }
    </style>
</head>

<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100" style="padding-top: 40px;">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/assets/plugins/Login/images/Isotipo SalusLaboris.png" />
                    <img src="~/assets/plugins/Login/images/letras.png" />
                </div>

                @using (Html.BeginForm("Login", "IngresoSistema", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login100-form validate-form", id = "frmLogin", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <span class="login100-form-title" style="padding-bottom: 10px;">
                        <img src="~/assets/plugins/Login/images/SIGESOFT2.fw.png" style="width: 250px;" alt="" />
                    </span>
                    <div class="wrap-input100">
                        @Html.TextBoxFor(m => m.Username, new { @class = "input100", placeholder = "Usuario", autocomplete = "off" })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        </span>
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                    </div>

                    <div class="wrap-input100">
                        @Html.PasswordFor(m => m.Password, new { @class = "input100", placeholder = "Password", autocomplete = "off" })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>

                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn">
                            Iniciar Sesion
                        </button>
                    </div>
                }
              
            </div>
        </div>
    </div>


    <!--===============================================================================================-->
    <script src="~/assets/plugins/Login/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/assets/plugins/Login/vendor/bootstrap/js/popper.js"></script>
    <script src="~/assets/plugins/Login/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/assets/plugins/Login/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/assets/plugins/Login/vendor/tilt/tilt.jquery.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>
    <!--===============================================================================================-->
    <script src="~/assets/plugins/Login/js/main.js"></script>


</body>

</html>