    function show(value) {
        var td = $($("#" + value + " td")[0]).find("i");

        let pClass = '.' + value;
        if ($(pClass).css("display") == "none") {
            $(pClass).fadeIn(1000);
            $(pClass).show();
            td.addClass('fa-minus');
            td.removeClass('fa-plus');
        }
        else {
            $(pClass).hide();
            td.removeClass('fa-minus');
            td.addClass('fa-plus');
        }
    }

    function openModal() {
        $("#perfilModal").modal("show");
